{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "globalEnv": ["NODE_ENV", "BACKEND_PORT", "FRONTEND_PORT", "BACKEND_URL", "DATABASE_URL", "BETTER_AUTH_SECRET", "GOOGLE_CLIENT_ID", "GOOGLE_CLIENT_SECRET", "FRONTEND_URL", "REDIS_URL", "CENTRIFUGO_TOKEN_SECRET", "CENTRIFUGO_URL", "OPENROUTER_API_KEY", "OPENROUTER_BASE_URL", "OPENROUTER_DEFAULT_MODEL", "OPENAI_API_KEY", "OCR_PROVIDER", "OCR_FALLBACK_PROVIDER", "OCR_CONFIDENCE_THRESHOLD", "GOOGLE_VISION_API_KEY", "SENTRY_DSN", "NEXT_PUBLIC_SENTRY_DSN", "RUN_INTEGRATION", "TEST_FRONTEND_PORT", "TEST_BACKEND_PORT", "NEXT_DIST_DIR", "TESTCONTAINERS_RYUK_DISABLED"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "e2e": {
      "dependsOn": ["build"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "workers:dev": {
      "cache": false,
      "persistent": true
    }
  }
}
