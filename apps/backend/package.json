{
  "name": "@student-helper/backend",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "exports": {
    "./app-type": "./src/app.ts"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "migrations:generate": "drizzle-migrations generate",
    "migrations:up": "drizzle-migrations up",
    "migrations:down": "drizzle-migrations down",
    "migrations:status": "drizzle-migrations status",
    "migrations:fresh": "drizzle-migrations fresh",
    "migrations:refresh": "drizzle-migrations refresh",
    "workers:dev": "bun --watch src/worker.ts",
    "test:unit": "NODE_ENV=test bun test ./test/unit",
    "test:integration": "NODE_ENV=test bun test ./test/integration --timeout 120000 --preload ./test/setup/integration.preload.ts",
    "tests": "bun run test:unit && bun run test:integration"
  },
  "dependencies": {
    "@drepkovsky/drizzle-migrations": "^0.6.0",
    "@elysiajs/cors": "^1.4.1",
    "@student-helper/config": "*",
    "better-auth": "^1.4.18",
    "bullmq": "^5.67.3",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.2.25",
    "ioredis": "^5.9.2",
    "jose": "^6.1.3",
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "@student-helper/eslint": "*",
    "@student-helper/tsconfig": "*",
    "drizzle-kit": "^0.31.9",
    "testcontainers": "^11.11.0",
    "typescript": "5.9.2"
  }
}
