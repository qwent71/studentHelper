# Environment
NODE_ENV=development

# Ports
FRONTEND_PORT=3000
BACKEND_PORT=3001

# Backend URL (used by frontend to reach the API)
BACKEND_URL=http://localhost:3001

# Frontend URL (used by backend for CORS / auth)
FRONTEND_URL=http://localhost:3000

# Database (required)
DATABASE_URL=postgresql://studenthelper:studenthelper@localhost:5432/studenthelper

# Auth (required)
BETTER_AUTH_SECRET=change-me-to-a-random-64-char-hex-string

# Google OAuth (optional — enables "Sign in with Google")
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Redis
REDIS_URL=redis://localhost:6379

# Centrifugo
CENTRIFUGO_TOKEN_SECRET=centrifugo-dev-secret
CENTRIFUGO_URL=http://localhost:8800

# AI — OpenRouter (required — primary model gateway)
OPENROUTER_API_KEY=sk-or-your-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=google/gemini-2.0-flash-001

# AI — OpenAI (optional, fallback)
# OPENAI_API_KEY=sk-...

# OCR
OCR_PROVIDER=google-vision
OCR_FALLBACK_PROVIDER=none
OCR_CONFIDENCE_THRESHOLD=0.7

# Google Vision API key (required when OCR_PROVIDER=google-vision)
# GOOGLE_VISION_API_KEY=

# Sentry (optional — enables error tracking)
# SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
# NEXT_PUBLIC_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# Docker compose overrides (optional, used by docker/docker-compose.yml)
# COMPOSE_DATABASE_URL=postgresql://studenthelper:studenthelper@postgres:5432/studenthelper
# COMPOSE_REDIS_URL=redis://redis:6379
# COMPOSE_CENTRIFUGO_URL=http://centrifugo:8000
